{
  "name": "learning-portuguese",
  "version": "0.9.0",
  "description": "AI-powered Portuguese learning app with neural TTS and pronunciation feedback",
  "type": "module",
  "scripts": {
    "lint": "eslint \"*.js\" --ignore-pattern server.js",
    "serve": "serve -l 4321 .",
    "server": "node server.js",
    "dev": "concurrently \"npm run serve\" \"npm run server\"",
    "test:ui": "playwright test",
    "test": "npm run lint && npm run test:ui",
    "verify": "npm test",
    "validate:images": "node scripts/validateImages.cjs",
    "validate:images:report": "node scripts/validateImages.cjs --report"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "node-edge-tts": "^1.2.8",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "session-file-store": "^1.5.0",
    "stripe": "^14.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "better-sqlite3": "^12.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "serve": "^14.2.0"
  }
}
